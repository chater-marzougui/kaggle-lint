{
  "manifest_version": 3,
  "name": "Kaggle Python Linter",
  "version": "1.0.0",
  "description": "Lint Python code in Kaggle online notebooks - detect undefined variables, typos, indentation errors, and more",
  "permissions": ["activeTab", "storage", "scripting"],

  "host_permissions": [
    "https://www.kaggle.com/*",
    "https://*.kaggleusercontent.com/*",
    "https://*.jupyter-proxy.kaggle.net/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Kaggle Python Linter Options"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.kaggle.com/code/*",
        "https://www.kaggle.com/notebooks/*"
      ],
      "js": [
        "src/rules/undefinedVariables.js",
        "src/rules/capitalizationTypos.js",
        "src/rules/duplicateFunctions.js",
        "src/rules/importIssues.js",
        "src/rules/indentationErrors.js",
        "src/rules/emptyCells.js",
        "src/rules/unclosedBrackets.js",
        "src/rules/redefinedVariables.js",
        "src/rules/missingReturn.js",
        "src/lintEngine.js",
        "src/domParser.js",
        "src/ui/overlay.js",
        "src/content.js"
      ],
      "css": ["src/ui/styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/pageInjection.js"],
      "matches": [
        "https://www.kaggle.com/*",
        "https://*.kaggleusercontent.com/*",
        "https://*.jupyter-proxy.kaggle.net/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
