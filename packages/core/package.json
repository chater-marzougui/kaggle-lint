{
  "name": "@kaggle-lint/core",
  "version": "2.0.0",
  "description": "Core linting logic for Kaggle Python Linter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-pyodide",
    "copy-pyodide": "copyfiles -u 2 \"src/pyodide/**/*\" dist/pyodide",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "linter",
    "python",
    "kaggle"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6"
  }
}
