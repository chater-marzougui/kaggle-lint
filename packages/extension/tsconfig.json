{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "types": ["chrome"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "../core/src/**/*", "../ui-components/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../core/src/__tests__/**"
  ],
  "references": [{ "path": "../core" }, { "path": "../ui-components" }]
}
